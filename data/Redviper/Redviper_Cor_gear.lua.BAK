        ['WildFire'] = 'Wildfire',
        ['Aeolian'] = 'Aeolian Edge',
        ['Hotshot'] = 'Hot Shot',
        ['Custom'] = 'Flat Blade'
	}

    -- Additional local binds
	send_command('bind #e gs c cycle ElementalMode')
